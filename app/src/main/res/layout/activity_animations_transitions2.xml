<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/root"
    tools:context="br.com.materialtheme.AnimationsTransitions">
    
    <ImageView
        android:id="@+id/imageViewAnimation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher_round"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/buttonAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AÇÃO"/>

    <Button
        android:id="@+id/buttonPrevSceneAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VOLTAR A CENA"
        android:onClick="changeScene"/>

</LinearLayout>
